@model Book
@{
    ViewData["Title"] = "BookDetail";
}

<div class="card mb-3">
  <img src="@Model.Picture" class="card-img-top" alt="..." style="width:300px">
  <div class="card-body">
      <h5 class="card-title">@Model.Name</h5>
      <p class="card-text"><strong>Author:</strong> @Model.Author</p>
      <p class="card-text"><strong>Genre:</strong> @Model.Genre</p>
      <p class="card-text"><strong>Price:</strong> @Model.Price</p>
  </div>
</div>

